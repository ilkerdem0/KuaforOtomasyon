<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kuaför Otomasyonu</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kuafor.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">✂️ Kuaför Otomasyonu</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">🏠 Ana Sayfa</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                💇 Müşteri İşlemleri
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Randevu" asp-action="Al">📅 Randevu Al</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item disabled" href="#">Geçmiş Randevularım</a></li>
                            </ul>
                        </li>

                        @if (User.IsInRole("Yonetici"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" role="button" data-bs-toggle="dropdown">
                                    🛠 Yönetim Paneli
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Yonetim" asp-action="Index">📋 Randevu Yönetimi</a></li>
                                    <li><hr class="dropdown-divider"></li>

                                    <li><a class="dropdown-item" asp-controller="Yonetim" asp-action="Musteriler">👥 Müşteriler</a></li>
                                    <li><a class="dropdown-item" asp-controller="Yonetim" asp-action="Calisanlar">👨‍💼 Çalışanlar</a></li>
                                    <li><a class="dropdown-item" asp-controller="Yonetim" asp-action="Salonlar">🏢 Salonlar</a></li>
                                    <li><a class="dropdown-item" asp-controller="Yonetim" asp-action="Hizmetler">✂️ Hizmetler</a></li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li><h6 class="dropdown-header">Yeni Kayıt</h6></li>
                                    <li><a class="dropdown-item small" asp-controller="Yonetim" asp-action="CalisanEkle">+ Çalışan Ekle</a></li>
                                    <li><a class="dropdown-item small" asp-controller="Yonetim" asp-action="SalonEkle">+ Salon Ekle</a></li>
                                    <li><a class="dropdown-item small" asp-controller="Yonetim" asp-action="HizmetEkle">+ Hizmet Ekle</a></li>

                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Yonetim" asp-action="Rapor">💰 Gelir Raporu</a></li>
                                </ul>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link text-dark fw-bold me-2" asp-controller="Auth" asp-action="Profil" title="Profilimi Gör/Düzenle">
                                    Merhaba, @User.Identity?.Name 👤
                                </a>

                                <a class="btn btn-outline-danger btn-sm" asp-controller="Auth" asp-action="Logout">🚪 Çıkış</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Auth" asp-action="Login">🔐 Giriş Yap</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Kuaför Otomasyon Sistemi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>