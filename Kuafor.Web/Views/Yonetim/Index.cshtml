@model List<Kuafor.Core.DTOs.RandevuListDto>

@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="container mt-4">

    <div class="text-center mb-5">
        <h1 class="display-5 text-danger">🛠 Yönetim Paneli</h1>
        <p class="text-muted">İşletmenizi buradan kolayca yönetin.</p>
    </div>

    <div class="row g-4 mb-5">

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-warning text-center">
                <div class="card-body">
                    <div class="display-4 mb-2">🏢</div>
                    <h5 class="card-title">Salonlar</h5>
                    <p class="card-text small text-muted">Şubeleri yönet ve düzenle.</p>
                    <a href="/Yonetim/Salonlar" class="btn btn-warning text-dark w-100">Salon Listesi</a>
                    <a href="/Yonetim/SalonEkle" class="btn btn-sm btn-outline-warning mt-2 w-100">+ Yeni Ekle</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-success text-center">
                <div class="card-body">
                    <div class="display-4 mb-2">👨‍💼</div>
                    <h5 class="card-title">Personel</h5>
                    <p class="card-text small text-muted">Çalışanları ve uzmanlıkları yönet.</p>
                    <a href="/Yonetim/Calisanlar" class="btn btn-success w-100">Çalışan Listesi</a>
                    <a href="/Yonetim/CalisanEkle" class="btn btn-sm btn-outline-success mt-2 w-100">+ Yeni Ekle</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-info text-center">
                <div class="card-body">
                    <div class="display-4 mb-2">✂️</div>
                    <h5 class="card-title">Hizmetler</h5>
                    <p class="card-text small text-muted">Fiyat ve süreleri güncelle.</p>
                    <a href="/Yonetim/Hizmetler" class="btn btn-info text-white w-100">Hizmet Listesi</a>
                    <a href="/Yonetim/HizmetEkle" class="btn btn-sm btn-outline-info mt-2 w-100">+ Yeni Ekle</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-primary text-center">
                <div class="card-body">
                    <div class="display-4 mb-2">👥</div>
                    <h5 class="card-title">Müşteriler</h5>
                    <p class="card-text small text-muted">Müşteri bilgilerini düzenle.</p>
                    <a href="/Yonetim/Musteriler" class="btn btn-primary w-100">Müşteri Listesi</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <a href="/Yonetim/Rapor" class="btn btn-outline-success w-100 p-3 shadow-sm">
                <h3>💰 Toplam Gelir Raporunu Gör</h3>
            </a>
        </div>
    </div>

    <hr />

    <div class="card shadow mt-4">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">📋 Bekleyen ve Onaylanan Randevular</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Müşteri</th>
                        <th>Çalışan</th>
                        <th>Hizmet</th>
                        <th>İşlem</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Baslangic.ToString("dd.MM.yyyy")</td>
                            <td>@item.Baslangic.ToString("HH:mm")</td>
                            <td>@item.MusteriAdi</td>
                            <td>@item.CalisanAdi</td>
                            <td>
                                @item.HizmetAdi
                                <span class="badge bg-secondary">@item.Ucret TL</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/Yonetim/Onayla/@item.Id" class="btn btn-sm btn-success text-white" style="margin-right: 5px;">
                                        ✅ Onayla
                                    </a>
                                    <a href="/Yonetim/Iptal/@item.Id" class="btn btn-sm btn-danger text-white">
                                        ❌ İptal
                                    </a>
                                </div>
                            </td>
                            <td>
                                @if (item.Durum == "Onaylandi")
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else if (item.Durum == "OnayBekliyor")
                                {
                                    <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@item.Durum</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>