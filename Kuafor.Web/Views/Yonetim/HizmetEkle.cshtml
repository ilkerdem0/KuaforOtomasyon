@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-5">
    <h2>✨ Yeni Hizmet Tanımla</h2>
    <hr />

    <form asp-action="HizmetEkle" method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label">Hizmet Adı</label>
            <input type="text" name="ad" class="form-control" placeholder="Örn: Sakal Tıraşı" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Süre (Dakika)</label>
            <input type="number" name="sure" class="form-control" placeholder="30" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Ücret (TL)</label>
            <input type="number" name="ucret" class="form-control" placeholder="100" required />
        </div>

        <button type="submit" class="btn btn-success w-100">💾 Kaydet</button>
    </form>
</div>